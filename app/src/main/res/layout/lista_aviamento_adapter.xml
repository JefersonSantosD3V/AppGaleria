<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgListaAviamento"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bordas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_vazio" />

    <TextView
        android:id="@+id/ListAviamento_Nome"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bordas"
        app:layout_constraintStart_toEndOf="@id/imgListaAviamento"
        app:layout_constraintTop_toTopOf="parent"
        android:text="ListAviamento_Nome" />
    <TextView
        android:id="@+id/ListAviamento_Descricao"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="1.5dp"
        android:background="@drawable/bordas"
        app:layout_constraintStart_toEndOf="@id/imgListaAviamento"
        app:layout_constraintTop_toBottomOf="@id/ListAviamento_Nome"
        android:text="ListAviamento_Desc" />

    <TextView
        android:id="@+id/ListAviamento_Quantidade"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@drawable/bordas"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toEndOf="@id/ListAviamento_Nome"
        app:layout_constraintTop_toTopOf="parent"
        android:text="ListAviamento_Quant" />
</androidx.constraintlayout.widget.ConstraintLayout>