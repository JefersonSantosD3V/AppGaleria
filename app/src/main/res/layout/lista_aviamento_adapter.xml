<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardElevation="10dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/coral_blue"
        android:padding="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgAdapterAviamento_Foto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_clear"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000" />

        <TextView
            android:id="@+id/textAdapterAviamento_Nome"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_toRightOf="@id/imgAdapterAviamento_Foto"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/textAdapterAviamento_Descricao"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_toRightOf="@id/imgAdapterAviamento_Foto"
            android:layout_below="@id/textAdapterAviamento_Nome"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/textAdapterAviamento_Quantidade"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="100"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bordas"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_toRightOf="@id/textAdapterAviamento_Descricao"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>