<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:alpha="0.9"
    app:cardCornerRadius="6dp"
    app:cardElevation="10dp"
   >

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_face"
        android:layout_centerVertical="true"
        android:id="@+id/img_list_contato_adapter"
        />

    <TextView
        android:id="@+id/textAdapterContato_Nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Nome"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_toEndOf="@id/img_list_contato_adapter"
        android:layout_marginStart="10dp"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/textAdapterContato_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="E-mail"

        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_toEndOf="@id/img_list_contato_adapter"
        android:layout_below="@id/textAdapterContato_Nome"
        android:layout_marginStart="10dp"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/textAdapterContato_Telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Telefone"

        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_toEndOf="@id/img_list_contato_adapter"
        android:layout_below="@id/textAdapterContato_Email"
        android:layout_marginStart="10dp"
        tools:ignore="HardcodedText" />

</RelativeLayout>
</androidx.cardview.widget.CardView>